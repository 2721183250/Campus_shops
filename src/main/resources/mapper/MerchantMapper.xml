<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.taotao.mapper.MerchantMapper">

    <resultMap id="BaseResultMap" type="com.taotao.entity.Merchant">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="fans" column="fans" jdbcType="VARCHAR"/>
            <result property="fansCount" column="fansCount" jdbcType="BIGINT"/>
            <result property="isDeleted" column="is_deleted" jdbcType="INTEGER"/>
    </resultMap>
    <select id="selectHotRank" resultType="com.taotao.entity.Merchant">
        select * from merchant order by fansCount desc limit #{hotRankSize};
    </select>

</mapper>
