<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.taotao.mapper.UserMapper">

    <!-- 查询模块 -->
    <select id="selectHotRankOfUserInfo" resultType="com.taotao.entity.User">

    </select>
    <select id="selectSingleHotRandOfUserInfo" resultType="com.taotao.entity.User">
        select * from user where user_id = #{id}
    </select>

    <select id="selectListHotRandOfUserInfo" resultType="com.taotao.entity.User">
        select * from user
                 where user_id in
                 <foreach collection="list" item="item"
                          index="index" open="(" separator="," close=")">
                     #{item}
                 </foreach>
    </select>


    <!-- 更新模块 -->
    <update id="updateUser">
        update user
            <set>
                <if test="cardId != null and cardId != ''">
                    card_id = #{cardId},
                </if>
                <if test="phone != null and phone != ''">
                    phone = #{phone},
                </if>
                <if test="realName != null and realName != ''">
                    real_name = #{realName},
                </if>
                <if test="sex != null and sex != ''">
                    sex = #{sex},
                </if>
                <if test="address != null and address != ''">
                    address = #{address},
                </if>
                <if test="birthday != null">
                    birthday = #{birthday},
                </if>
                <if test="nickName != null and nickName != ''">
                    nick_name = #{nickName},
                </if>
                <if test="icon != null and icon != ''">
                    icon = #{icon}
                </if>
            </set>
        where user_id = #{userId};
    </update>
</mapper>
